<div class="container-fluid" ng-app="rhymebook" ng-controller="RhymesController as ctrl">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h1 ng-if="spelling">searching for {{currentSearch}}</h1>
    </div>
    <div class="panel-body">
      <form name="rhymeSearch" ng-submit="ctrl.rhymes()" class="form-inline">
        <div class="form-group">
          <input class="form-control" type="text" ng-model="searchTerm" placeholder="Enter regex" autofocus>
          <input type='submit'/>
        </div>
      </form>
    </div>

    <div ng-show="ctrl.spelling">
      <h4>{{ctrl.spelling.spelling}}</h4> is pronounced as <h4>{{ctrl.spelling.pronunciation}}</h4>
    </div>
    <div>lead with a "?" to view a word's pronunciation</div>
    <div>"." is a group of consonants</div>
    <div>
      <%# ng-controller="PhonemeController as phonemeController"> %>
      <div>possible phonemes:</div>
      <div ng-repeat="phoneme in ctrl.allPhonemes">{{ phoneme }}</div>
    </div>
    <div ng-repeat='rhyme in ctrl.rhymeResults'>
      <h4>{{rhyme.spelling}}</h4>
    </div>
  </div>
</div>
